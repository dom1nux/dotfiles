#### Core Setup ####
export PATH=$PATH:/home/dom1nux/.local/bin

#### Target-Specific Configuration ####
{{- if eq .chezmoi.hostname "Mizuki" }}
[[ -f ~/.config/zsh/targets/mizuki.zsh ]] && source ~/.config/zsh/targets/mizuki.zsh
{{- else if eq .chezmoi.hostname "mizuho" }}
[[ -f ~/.config/zsh/targets/mizuho.zsh ]] && source ~/.config/zsh/targets/mizuho.zsh
{{- else if eq .chezmoi.hostname "zero" }}
[[ -f ~/.config/zsh/targets/zero.zsh ]] && source ~/.config/zsh/targets/zero.zsh
{{- end }}

#### Universal Aliases ####
alias cz='chezmoi'
alias ap='chezmoi -v apply'
alias grep='grep --color=always'
alias ip='ip -color=auto'

#### Core Navigation ####
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ll='ls -la'

#### Keybindings ####
bindkey -e
bindkey '^p' history-search-backward
bindkey '^n' history-search-forward
bindkey '^[w' kill-region

#### History ####
HISTSIZE=5000
HISTFILE=~/.zsh_history
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory sharehistory hist_ignore_space hist_ignore_all_dups hist_save_no_dups hist_ignore_dups hist_find_no_dups
